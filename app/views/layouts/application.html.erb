<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="navibar">
      <%= link_to 'breweries', breweries_path %>
      <%= link_to 'beers', beers_path %>
      <%= link_to 'ratings', ratings_path %>
      <%= link_to 'users', users_path %>
      <%= link_to 'places', places_path %>
      <%= link_to 'clubs', beer_clubs_path %>      
      <%= '|' %>
      <% if current_user %>
        <%= link_to current_user.username, current_user %>
        <%= link_to 'join a club', new_membership_path %>        
        <%= link_to 'rate a new beer', ratings_new_path%>
        <%= link_to 'log out', signout_path,
        data: {
        "turbo-method": :delete
        }, class: "link-secondary smooth" %>
      <% else %>
        <%= link_to 'sign up', signup_path %>
        <%= link_to 'sign in', signin_path %>
      <% end %>
    </div>

    <%= yield %>
    <% if current_user %>
      <p><%= current_user.username %> signed in</p>
    <% end %>
  </body>
</html>

<h2>List of ratings</h2>

<ul>
 <% @ratings.each do |rating| %>
   <li> <%= "#{rating.beer.name}:" + " #{rating.score}" %> <%= link_to rating.user.username, rating.user %> </li>
 <% end %>
</ul>

<p>
  Number of ratings: 
  <%= @ratings.count %>
</p>

<p>
  <%= link_to "New rating", new_rating_path%>
</p>
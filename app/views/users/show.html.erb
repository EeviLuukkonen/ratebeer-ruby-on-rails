<p style="color: green"><%= notice %></p>

<div>
  <h3>
    <strong>Username:</strong>
  </h3>
  <p>
    <%= @user.username %>
  </p>
  <% if @user.ratings.empty? %>
  <p>
    Has not made any ratings
  </p>
  <% else %>
  <p>
      Has made
      <%= pluralize(@user.ratings.count, "rating") %> 
      with average of
      <%= @user.average_rating %>
    </p>

    <div> Favourite beer: <%= @user.favorite_beer %> </div>
    <div> Favourite style: <%= @user.favorite_style %> </div>
    <div> Favourite brewery: <%= @user.favorite_brewery %> </div>
  <% end %>

  <% if @user.beer_clubs.empty? %>
    Has not joined any club
  <% else %>
    <h4>Memberships</h4>

    <ul>
      <% @user.beer_clubs.each do |club| %>
        <li>
          <%= link_to club.name, club %>
        </il>
      <% end %>
    </ul>
  <% end %>

  <p>
    <strong>Ratings</strong>
  </p>
  <ul>
    <% @user.ratings.each do |rating| %>
      <li><%= "#{rating.to_s}" %>
        <% if @user == current_user %>
          <%= link_to "Delete", rating, data: {turbo_method: :delete} %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <% if @user == current_user %>
    <p> <%= link_to "Edit user", edit_user_path(@user) %> </p>
    <p> <%= button_to "Destroy user", @user, method: :delete %> </p>
  <% end %>

  <%= link_to "Back to users", users_path %>

</div>

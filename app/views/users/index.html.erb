<h1>Users</h1>

<br>
<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item">
      <%= link_to user.username, user %>
      <% if user.locked and current_user and current_user.admin %>
        <span class="badge text-bg-danger">locked</span>
      <% end %>
    </li>
  <% end %>
</ul>
<br>

<%= link_to "New user", new_user_path, class:'btn btn-primary' %>
